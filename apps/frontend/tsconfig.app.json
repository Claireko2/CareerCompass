{
    "compilerOptions": {
        /* Projectâ€‘references */
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        /* Target & module for modern bundlers */
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        /* React / JSX */
        "jsx": "react-jsx",
        /* Output (bundlers usually ignore) */
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmit": false,
        /* Interop & checking */
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "vite.config.ts"
    ],
    "exclude": [
        "../backend/**"
    ]
}